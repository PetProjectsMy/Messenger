{
  "compilerOptions": {
    // "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": ["es2022", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["src/typings", "./node_modules/@types/"],
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules/", "build/", "config/eslint/"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
